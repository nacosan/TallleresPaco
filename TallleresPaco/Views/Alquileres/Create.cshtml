@model TallleresPaco.Models.Alquileres

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Alquileres</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label">Usuario</label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VehiculoId" class="control-label">Matricula del Vehículo</label>
                <select asp-for="VehiculoId" class="form-control" asp-items="ViewBag.VehiculoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label">Fecha De Inicio</label>
                <input asp-for="FechaInicio" class="form-control" id="FechaInicio" type="date" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label">Fecha De Finalización</label>
                <input asp-for="FechaFin" class="form-control" id="FechaFin" type="date" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label">Precio</label>
                <input readonly asp-for="Precio" class="form-control" value="@ViewBag.VehiculoPrecio" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioFinal" class="control-label">Precio Final</label>
                <input asp-for="PrecioFinal" class="form-control" id="PrecioFinal" readonly />
                <span asp-validation-for="PrecioFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label hidden asp-for="Estado" class="control-label"></label>
                <input hidden asp-for="Estado" class="form-control" value="Alquilado" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script>
        // Obtener el diccionario de precios desde ViewBag (serializado a JSON)
        var preciosVehiculos = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.PreciosVehiculos));

        // Referencias a elementos
        var selectVehiculo = document.getElementById('VehiculoId');
        var inputPrecio = document.getElementById('Precio');

        // Función para actualizar el precio al cambiar el vehículo
        function actualizarPrecio() {
            var vehiculoId = selectVehiculo.value;
            if (vehiculoId && preciosVehiculos[vehiculoId] !== undefined) {
                inputPrecio.value = preciosVehiculos[vehiculoId].toFixed(2);
            } else {
                inputPrecio.value = '';
            }
        }

        // Evento onchange para el select de vehículos
        selectVehiculo.addEventListener('change', actualizarPrecio);

        // Opcional: actualizar precio al cargar la página (si hay valor seleccionado)
        actualizarPrecio();
    </script>
    <script>
        // Función para calcular el PrecioFinal
        function calcularPrecioFinal() {
            var fechaInicio = document.getElementById('FechaInicio').value;
            var fechaFin = document.getElementById('FechaFin').value;
            var precio = parseFloat(document.getElementById('Precio').value);


            if (fechaInicio && fechaFin) {
                // Convertir las fechas a objetos Date
                var inicio = new Date(fechaInicio);
                var fin = new Date(fechaFin);

                // Calcular la diferencia de días
                var diferencia = (fin - inicio) / (1000 * 3600 * 24); // Convertir a días
                if (diferencia < 0) {
                    alert('La fecha de fin no puede ser anterior a la fecha de inicio.');
                    return;
                }

                // Calcular el precio final
                var precioFinal = diferencia * precio;
                document.getElementById('PrecioFinal').value = precioFinal.toFixed(2); // Mostrar el precio final
            }
        }

        // Ejecutar el cálculo cada vez que las fechas cambian
        document.getElementById('FechaInicio').addEventListener('change', calcularPrecioFinal);
        document.getElementById('FechaFin').addEventListener('change', calcularPrecioFinal);
    </script>
}
