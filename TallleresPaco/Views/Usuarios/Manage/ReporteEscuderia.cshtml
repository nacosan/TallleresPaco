@model ReportesViewModel

@{
    ViewData["Title"] = "Reporte Escudería";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Escuderias == null || !Model.Escuderias.Any())
{
    <p>No hay datos de escuderías.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Escudería</th>
                <th>Total Alquileres</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var escuderia in Model.Escuderias)
            {
                <tr>
                    <td>@escuderia.NombreEscuderia</td>
                    <td>@escuderia.TotalAlquileres</td>
                </tr>
            }
        </tbody>
    </table>
}
