@model ReportesViewModel

@{
    ViewData["Title"] = "Mis Reservas";
}

<h2>@ViewData["Title"]</h2>

@if (Model.ReservasUsuario == null || !Model.ReservasUsuario.Any())
{
        <p>No tienes reservas registradas.</p>
}
else
{
        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Id Alquiler</th>
                    <th>Matrícula Vehículo</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Precio</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var reserva in Model.ReservasUsuario)
            {
                        <tr>
                            <td>@reserva.IdAlquiler</td>
                            <td>@reserva.VehiculoMatricula</td>
                            <td>@reserva.FechaInicio.ToString("dd/MM/yyyy")</td>
                            <td>@reserva.FechaFin.ToString("dd/MM/yyyy")</td>
                            <td>@reserva.Precio.ToString("C")</td>
                            <td>@reserva.Estado</td>
                        </tr>
            }
            </tbody>
        </table>
}
