@model ReportesViewModel

@{
    ViewData["Title"] = "Histórico de Alquileres";
}

<h2>@ViewData["Title"]</h2>

@if (Model.HistoricoAlquileres == null || !Model.HistoricoAlquileres.Any())
{
    <p>No hay registros de alquileres.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Id Alquiler</th>
                <th>Usuario</th>
                <th>Matrícula Vehículo</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Precio</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var alquiler in Model.HistoricoAlquileres)
            {
                <tr>
                    <td>@alquiler.IdAlquiler</td>
                    <td>@alquiler.UsuarioNombre</td>
                    <td>@alquiler.VehiculoMatricula</td>
                    <td>@alquiler.FechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>@alquiler.FechaFin.ToString("dd/MM/yyyy")</td>
                    <td>@alquiler.Precio.ToString("C")</td>
                    <td>@alquiler.Estado</td>
                </tr>
            }
        </tbody>
    </table>
}
