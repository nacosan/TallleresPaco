@model ReportesViewModel

@{
    ViewData["Title"] = "Usuarios Recientes";
}

<h2>@ViewData["Title"]</h2>

@if (Model.UsuariosRecientes == null || !Model.UsuariosRecientes.Any())
{
    <p>No se encontraron usuarios recientes.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Nombre Completo</th>
                <th>Fecha de Registro</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model.UsuariosRecientes)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.NombreCompleto</td>
                    <td>@usuario.FechaRegistro?.ToString("dd/MM/yyyy")</td>
                    <td>@usuario.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
